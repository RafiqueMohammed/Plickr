<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="top"
    android:background="#ddd"
    tools:context="com.growthwell.android.trash.About">
        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_marginBottom="6dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BETA"
            android:gravity="right"
           android:textSize="16sp"
            android:id="@+id/beta_txt" />

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/plickr"
            android:scaleType="fitCenter"
            android:id="@+id/img_logo_plickr" />

        </LinearLayout>

    <TextView
        android:id="@+id/version_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:layout_gravity="right"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/visit_plickr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="plickr.in"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal|center"
        android:textStyle="bold"
        android:clickable="true" style="@style/font_green"/>



    </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="6dp"
             android:layout_marginBottom="6dp"
             android:background="#fff"
             android:orientation="vertical"
             android:padding="10dp">

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="POWERED BY"
                 android:textStyle="bold"
                 android:textSize="18sp"
                 android:layout_marginBottom="10dp"
                 />
                 <LinearLayout
                     android:gravity="center"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">
                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/ic_growthwell"/>
                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="vertical">
                         <TextView
                             android:paddingTop="4dp"
                             android:layout_marginLeft="5dp"
                             android:layout_marginStart="5dp"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:text="GROWTHWELL"
                             android:textSize="20sp"
                             />
                         <TextView
                             android:layout_marginStart="6dp"
                             android:layout_marginLeft="6dp"
                             android:lineSpacingExtra="3dp"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:text="Consulting Pvt. Ltd."
                             android:textSize="13sp"
                             />
                         </LinearLayout>
                     </LinearLayout>
             <TextView
                 android:gravity="right|end"
                 android:layout_marginTop="5dp"
                 android:id="@+id/visit_growthwell"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:text="www.growthwell.com"
                 android:clickable="true" android:textColor="#99BB00"/>

         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="6dp"
             android:background="#fff"
             android:orientation="vertical"
             android:padding="10dp">

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="DEVELOPER TEAM"
                 android:textStyle="bold"
                 android:textSize="18sp"
                 android:layout_marginBottom="10dp"
                 />
             <TextView
                 android:padding="7dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Contact us at info@growthwell.com"
                 android:textSize="15sp"
                 />


             <Button
                 android:layout_marginTop="8dp"
                 android:layout_marginBottom="8dp"
                 android:textColor="#99bb00"
                 android:textStyle="bold"
                 android:background="@drawable/btn_dark"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Feedback / Bug Report"
                 android:id="@+id/report_bug" />

         </LinearLayout>

<!--
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A product of Growthwell Consulting Pvt. Ltd"
        android:textSize="15sp"
        android:gravity="center"/>

    <TextView
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.growthwell.com"/>
        -->


</LinearLayout>
    </ScrollView>
