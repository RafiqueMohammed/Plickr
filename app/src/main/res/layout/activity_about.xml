<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="top"
    android:background="#ddd"
    tools:context="com.growthwell.android.trash.About">
        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_marginBottom="6dp"
    android:padding="10dp">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plickr_128"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VERSION 1.0.1"
        android:textSize="15sp"
        android:gravity="right"/>
    <TextView
        android:id="@+id/visit_plickr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.plickr.in"
        android:textSize="15sp"
        android:gravity="left"
        android:textStyle="bold"
        android:clickable="true" android:textColor="#99BB00"/>


    </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="6dp"
             android:layout_marginBottom="6dp"
             android:background="#fff"
             android:orientation="vertical"
             android:padding="10dp">

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="ABOUT GROWTHWELL"
                 android:textStyle="bold"
                 android:textSize="18sp"
                 android:layout_marginBottom="10dp"
                 />
                 <TextView
                 android:lineSpacingExtra="3dp"
                 android:padding="7dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="GrowthWell Consulting Pvt Ltd is one of the premiere Offshore Outsourcing and Global IT Consulting and Internet solutions provider. We specialize in building tailored, innovative strategies that harness the power of the Web for your business."
                 android:textSize="15sp"
                 />
             <TextView
                 android:id="@+id/visit_growthwell"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:text="www.growthwell.com"
                 android:clickable="true" android:textColor="#99BB00"/>

         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="6dp"
             android:background="#fff"
             android:orientation="vertical"
             android:padding="10dp">

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="DEVELOPER TEAM"
                 android:textStyle="bold"
                 android:textSize="18sp"
                 android:layout_marginBottom="10dp"
                 />
             <TextView
                 android:padding="7dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Rafique Mohammed (Android)"
                 android:textSize="15sp"
                 />
             <TextView
                 android:padding="7dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Ronak Rathod (Web API)"
                 android:textSize="15sp"
                 />

             <Button
                 android:layout_marginTop="8dp"
                 android:layout_marginBottom="8dp"
                 android:textColor="#99bb00"
                 android:textStyle="bold"
                 android:background="@drawable/btn_dark"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Got Error?? Report Us!"
                 android:id="@+id/report_bug" />

         </LinearLayout>

<!--
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A product of Growthwell Consulting Pvt. Ltd"
        android:textSize="15sp"
        android:gravity="center"/>

    <TextView
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.growthwell.com"/>
        -->


</LinearLayout>
    </ScrollView>
