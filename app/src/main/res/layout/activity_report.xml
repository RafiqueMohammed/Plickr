<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="#ccc"
    tools:context="com.growthwell.android.viewitquick.Report">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#fff"
      android:orientation="vertical"
      android:layout_marginBottom="5dp"
      android:padding="12dp">
      <TextView
          android:textColor="#99bb00"
          android:gravity="center"
          android:padding="8dp"
          android:text="Feedback / Report Us"

          android:textSize="24sp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <TextView
          android:lineSpacingExtra="3dp"
android:padding="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Your feedback help us to improve ourself. So please feel free to give us your feedback."/>
      <TextView
          android:lineSpacingExtra="3dp"
          android:padding="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="If you found any bugs or error in the app then kindly help us to solve it by reporting us here."
          />
      </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:textSize="18sp"
            android:text="Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

           <RadioGroup
               android:layout_marginBottom="5dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/type_grp">
               <RadioButton
                   android:layout_marginLeft="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:paddingRight="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Feedback"/>

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Bug Report"/>
           </RadioGroup>


        <TextView
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:text="Full Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:text="Your Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText

            android:minHeight="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
             />
 <Button
     android:layout_marginTop="15dp"
     android:textSize="18sp"
     android:padding="15dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@drawable/btn_dark"
     android:textColor="#99bb00"
     android:text="Send"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>
